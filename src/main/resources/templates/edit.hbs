{{#partial "content"}}
<h1>Edit Team</h1>
<form action='/team/{{editTeam.memberId}}/edit' method="post">
    <div class="form-group">
        <label for="name">Team Name</label>
        <input id="name" name="name" class="form-control" type="text" value="{{editTeam.name}}">
    </div>
    <div class="form-group">
        <label for="description">Team description</label>
        <input id="description" name="description" class="form-control" type="text" value="{{editTeam.description}}">
    </div>
    <div class="form-group">
        <label for="member1">Name:</label>
        <input id="member1" name="member1" class="form-control" type="text">
    </div>
    <div class="form-group">
        <label for="member2">Name</label>
        <input id="member2" name="member2" class="form-control" type="text">
    </div>
    <div class="form-group">
        <label for="member3">Name</label>
        <input id="member3" name="member3" class="form-control" type="text">
    </div>

    <button type="submit" class="btn">Go!</button>
</form>
{{/partial}}

